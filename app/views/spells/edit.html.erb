<% provide(:title, "Edit spell") %>

<h1>Edit spell</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

  <%= form_with(model: @spell, local: true) do |f| %>

    <div class="field">
      <%= f.text_area :content %>
    </div>

    <div class="img-thumbnail">
    <%= image_tag @spell.display_image if @spell.image.attached? %>
    </div>

    <%= f.submit "Save changes", class: "btn btn-primary" %>
  <% end %>

  </div>
</div>



