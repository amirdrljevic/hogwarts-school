<% provide(:title, 'Sign up') %>

<% if current_user&.admin?  %>
  <% provide(:button_text, 'Create a new account') %>
  <h1>Create a new account</h1>
<% else %>
  <% provide(:button_text, 'Create my account') %>
  <h1>Sign up</h1>
<% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
  </div>
</div>